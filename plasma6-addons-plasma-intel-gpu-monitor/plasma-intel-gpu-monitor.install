post_install() {
  sudo systemctl enable --now setcap_intel_gpu_top.service
}

post_remove() {
  sudo systemctl disable --now setcap_intel_gpu_top.service
}

post_upgrade() {
  sudo systemctl daemon-reload
  post_remove
  post_install
  echo -e "\nRestart Plasma Shell to view the updated plasmoid.\n"
}
