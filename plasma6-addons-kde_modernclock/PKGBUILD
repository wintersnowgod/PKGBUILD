_pkgname=modernclock
pkgname=plasma6-applets-kde_modernclock
pkgver=1.0.0
pkgrel=1
pkgdesc="A modern looking clock widget for KDE Plasma! Written entirely in QML and Javascript, this clock makes your desktop look aesthetic! Inspired by the popular rainmeter skin "Mond"."
arch=('any')
url="https://github.com/prayag2/kde_modernclock"
provides=('plasma6-applets-kde_modernclock')
conflicts=('plasma6-applets-kde_modernclock-bin' 'plasma6-applets-kde_modernclock-git')
license=('GPL-3.0-only')
depends=('kirigami' 'libplasma' 'qt6-declarative' 'plasma5support' 'kdeclarative')
makedepends=('kpackage')
source=("${_pkgname}-${pkgver}.tar.gz::${url}/raw/refs/heads/main/archives/modernclock-${pkgver}.tar.gz")
sha256sums=('c58c586b96c9e61681e707dd2c1ad0cec591cca0ae78363ad6980f435a7db186')

package() {
  kpackagetool6 --type=Plasma/Applet -p ${pkgdir}/usr/share/plasma/plasmoids/ -i "${srcdir}/${_pkgname}-${pkgver}.tar.gz"
}
