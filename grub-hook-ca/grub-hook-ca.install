post_install() {
    echo -e "\e[34m\nFirst set up grub following the guide '\e[32mhttps://wiki.archlinux.org/title/GRUB#CA_Keys' \e[34mand generate the grub config after editing editing the /etc/default/grub '\e[32mhttps://wiki.archlinux.org/title/GRUB#Generated_grub.cfg'
\e[34m\nIf you plan to use sbctl to secureboot sign the bootloader then make sure you secureboot sign the bootloader manually using sbctl first.If you dont know how to secureboot sign the bootloader using sbctl, then consult '\e[32mhttps://wiki.archlinux.org/title/Unified_Extensible_Firmware_Interface/Secure_Boot#Assisted_process_with_sbctl'
\nAfter that, any further secureboot signing of grub efi using sbctl after its update will be done by this hook as sbctl does not auto sign the grub efi upon its update because the grub efi is generated by the use of the grub-install command.\n\e[0m"
}

post_upgrade() {
  post_install "$@"
}
